<mvc:View controllerName="hr.axians.zeptd.controller.Detail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:codeEditor="sap.ui.codeeditor">
    <f:DynamicPage id="page"
        busy="{detailView>/busy}"
        busyIndicatorDelay="{detailView>delay}"
        core:require="{
            formatMessage: 'sap/base/strings/formatMessage',
            DateType: 'sap/ui/model/type/Date'
        }">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title
                        text="{
                            parts: [
                                'i18n>commonItemTitle',
                                'DeliveryDocument'
                            ],
                            formatter: 'formatMessage'
                        }"
                    />
                </f:heading>
                <f:actions>
                    <Button
                        text="{i18n>downloadButtonText}"
                        type="Emphasized"
                        press="onDownloadPress"/>
                </f:actions>
                <f:navigationActions>
                    <Button
                        icon="sap-icon://decline"
                        type="Transparent"
                        press="onCloseDetailPress"/>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <codeEditor:CodeEditor id="codeeditor"
                editable="false"
                type="xml"
                value="{detailView>/xml}"
                height="100%"
            />
        </f:content>
    </f:DynamicPage>
</mvc:View>